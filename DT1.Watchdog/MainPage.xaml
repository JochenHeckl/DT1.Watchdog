<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DT1.Watchdog"
             xmlns:viewModel="clr-namespace:DT1.Watchdog.ViewModel"
             x:Class="DT1.Watchdog.MainPage"
             Title="DT1 Watchdog">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="{local:TextResource ResourceKey=SettingsLabel}"
            Order="Primary"
            Priority="0"
            Command="{Binding OpenSettingsCommand}"/>
        <ToolbarItem Order="Secondary" Text="Item 2" Priority="1" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Label Text="{Binding DevicePresenceLabel}" FontSize="14" />
        <Button Text="Scan" Command="{Binding ScanNowCommand}"/>
    </StackLayout>


</ContentPage>
